doctype html
html
  head
    <link rel="icon" type="image/x-icon" href="images/JSurvey-logos.jpeg">
    block head_tags 
      link(rel="stylesheet" type="text/css" href="css/style.css")
      link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet")
      link(href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet")
      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")

    block title
      title My Site - #{title}
    block scripts      

  body
    block header 
      #header 
        div(class="header-top")
            img(class="logo-main" src="images/JSurvey-logos.jpeg")        
        div(class="header-bottom")
            ul(class="navbar-left")
                li 
                    a(href="/jsurvey/") Home
                li 
                    a(href="/jsurvey/make-a-survey") Make a survey
                  
                li 
                    a(href="/jsurvey/all_surveys") All surveys 
                    
                if(username)
                    li 
                        a(href="/jsurvey/user_profile") Profile            
                                                
            if(username)
              ul(class="navbar-right")   
                  li 
                      a(href="/jsurvey/logout") Logout                                 
            else              
              ul(class="navbar-right")                         
                    li 
                        a(href="/jsurvey/login") Login 
                    li 
                        a(href="/jsurvey/register") Register 

    block content
    block foot
      #footer
        h2 Footer